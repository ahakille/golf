@using Golf4.Models;
@model ReservationModels.CreatereservationModel

@{
    ViewBag.Title = "create";
}

<script type="text/javascript">
    $(function () {
        $("#Guest").click(function () {
            if ($(this).is(":checked")) {
                $("#GolfID2").attr("disabled", true);
            }
            else {
                $("#GolfID2").removeAttr("disabled");
            }
        });
    });
</script>

<h2>Boka tid på banan</h2>
@using (Html.BeginForm())
{
<div class="col-md-4">
    <hr />
    <dl class="dl-horizontal">
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.HCP)
        <dt>
            @Html.DisplayNameFor(model => model.GolfID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GolfID)
        </dd>
        <dt>
