    <input type="submit" class="btn btn-default" value="Boka tävling" />
</div>

<div class="reservHeader">
    <h4 id="headline">Inbokade rundor</h4>
    <img class="downarrow-ms" src="~/Content/img/arrow-down.png" alt="" />
    <div class="clear"></div>
</div>

<hr /> 
<div class="reservList">
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/jq-2.2.4/dt-1.10.13/datatables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.13/datatables.min.css" />

    <table id="reserv">
            <thead>
                <tr>
                    @foreach (DataColumn item in Model.Timestart.Columns)
                    {
                        <th> @item.ColumnName</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Timestart.Rows)
                {
                    <tr>
                        @foreach (DataColumn item in Model.Timestart.Columns)
                        {
                            <td>
                                @{if (item.ColumnName == "Avboka")
                                {
                                        int id = Convert.ToInt16(row[item.ColumnName]);
                                        @Html.ActionLink("Avboka", "deleteResv", "reservation", new MemberModels.MembersViewModel() { ID = int.Parse(User.Identity.Name), ReservationID = Convert.ToInt16(row[item.ColumnName]) }, new { onclick = "return confirm('Vill du avboka denna tid?');" })                                      
                                }

                                else
                                {
                                    @row[item.ColumnName];                                    
                                }   
                        }
                        </td>                                }
                    </tr>                                }
            </tbody>
        </table>
    <script>
        $(document).ready(function () {
                    $('#reserv').DataTable({

                                            })
                }
            );

    </script>
</div>


