@using Golf4.Models
@model MemberModels.MembersViewModel
@using System.Data

@{
    ViewBag.Title = "Min sida";
}

<div class="btnrow">
    @*<input type="submit" class="btn btn-default" value="Lämna in resultat" />*@

    <div class="memberbuttons"><a class="btn btn-default" href="~/reservation/index">Boka golfrunda &raquo;</a>
    <a class="btn btn-default" href="~/reservation/index">Boka tävling &raquo;</a></div>
</div>
<div class="col-md-6 membertables membertablestop">
    <div class="reservHeader">
        <h4>Inbokade rundor</h4>
    </div>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/pdfmake-0.1.18/dt-1.10.13/af-2.1.3/b-1.2.4/b-colvis-1.2.4/b-html5-1.2.4/b-print-1.2.4/fh-3.1.2/r-2.1.1/sc-1.4.2/se-1.2.0/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/pdfmake-0.1.18/dt-1.10.13/af-2.1.3/b-1.2.4/b-colvis-1.2.4/b-html5-1.2.4/b-print-1.2.4/fh-3.1.2/r-2.1.1/sc-1.4.2/se-1.2.0/datatables.min.js"></script>

    <table id="reserv" class="dt-responsive no-wrap" style="width: 100%;">
        <thead>
            <tr>
                @foreach (DataColumn item in Model.Timestart.Columns)
                {
                    <th> @item.ColumnName</th>
                }


            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Timestart.Rows)
            {
                <tr>
                    @foreach (DataColumn item in Model.Timestart.Columns)
                    {
                        <td>
                            @{if (item.ColumnName == "Avboka")
                                {
                                    @Html.ActionLink("Avboka", "deleteResv", "reservation", new { ReservationID = Convert.ToInt16(row[item.ColumnName]) }, new { onclick = "return confirm('Vill du avboka denna tid?');" })
                                }
                                else
                                {
                                    @row[item.ColumnName];
                                }

                            }
                        </td>                          
                    }
                </tr> 
            }
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $('#reserv').DataTable({
                "ordering": false,
                "info": false,
            });
        })
    </script>
</div>

